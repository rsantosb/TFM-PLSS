 crl [loadComm] :
    < plss : PLSS | state: executeComm, input: ('load-spec_['token[T]], INPLST), 
                    spec: SDL, select-spec: MQ, AtS >
 => < plss : PLSS | state: foo, input: INPLST, 
                    spec: moduleQIL, select-spec: moduleName(moduleQIL), AtS >
